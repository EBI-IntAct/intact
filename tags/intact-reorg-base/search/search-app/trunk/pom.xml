<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>uk.ac.ebi.intact.maven</groupId>
        <artifactId>intact-master</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>uk.ac.ebi.intact.app.search</groupId>
    <artifactId>search-app</artifactId>
    <packaging>war</packaging>
    <version>1.4-SNAPSHOT</version>
    <name>Search application</name>
    <description>Search web interface</description>

    <scm>
        <connection>scm:cvs:pserver:anonymous:cvs.sourceforge.net:/cvsroot/intact:intactCore</connection>
        <developerConnection>scm:svn:ext:username@cvs.sourceforge.net:/cvsroot/intact:intactCore</developerConnection>
        <url>http://intact.cvs.sourceforge.net/viewcvs.py/intact</url>
    </scm>

    <build>
        <finalName>search-${db}-${db.alias}</finalName>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
    </build>

    <properties>
         <lucene.index.directory>/ebi/sp/pro4/intact/public-tomcat/lucene-index</lucene.index.directory>
    </properties>

    <profiles>
        <profile>
            <id>ebi-test</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <db>oracle</db>
                <db.host>bourbon.ebi.ac.uk</db.host>
                <db.port>1521</db.port>
                <db.alias>d003</db.alias>
                <db.user>intactweb</db.user>
                <db.password>reading</db.password>
            </properties>
        </profile>
        <profile>
            <id>ebi-curators</id>
            <properties>
                <db>oracle</db>
                <db.host>cumae.ebi.ac.uk</db.host>
                <db.port>1531</db.port>
                <db.alias>zpro</db.alias>
                <db.user>intactweb</db.user>
                <db.password>reading</db.password>
            </properties>
        </profile>
        <profile>
            <id>ebi-prod</id>
            <properties>
                <db>oracle</db>
                <db.host>swan.ebi.ac.uk</db.host>
                <db.port>1521</db.port>
                <db.alias>iweb</db.alias>
                <db.user>intactweb</db.user>
                <db.password>reading</db.password>
            </properties>
        </profile>

        <profile>
            <id>oracle</id>
            <activation>
                <property>
                    <name>db</name>
                    <value>oracle</value>
                 </property>
            </activation>

            <properties>
                <db.platform>Oracle</db.platform>
                <db.jdbcLevel>2.0</db.jdbcLevel>
                <db.driver>oracle.jdbc.OracleDriver</db.driver>
                <db.protocol>jdbc</db.protocol>
                <db.subprotocol>oracle:thin:@${db.host}:${db.port}</db.subprotocol>
                <db.dialect>org.hibernate.dialect.Oracle9Dialect</db.dialect>
           </properties>

 <!--
<jdbc-connection-descriptor
   		platform="PostgreSQL"
   		jdbc-level="2.0"
   		driver="org.postgresql.Driver"
   		protocol="jdbc"
   		subprotocol="postgresql"
        eager-release="false"
		dbalias="DATABASE"
   		username="USER"
   		password="PASSWORD"
        />
        -->

            <dependencies>
                <dependency>
                    <groupId>com.oracle</groupId>
                    <artifactId>oracle-thin</artifactId>
                    <version>9.2.0</version>
                </dependency>
            </dependencies>
        </profile>
        <profile>
            <id>jettyConfig</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.mortbay.jetty</groupId>
                        <artifactId>maven-jetty6-plugin</artifactId>
                        <configuration>
                            <scanIntervalSeconds>10</scanIntervalSeconds>
                            <contextPath>intact/search</contextPath>
                        </configuration>
                    </plugin>
                </plugins>
            </build>

            <pluginRepositories>
                <!-- Repository to get the jetty plugin -->
                <pluginRepository>
                    <id>mortbay-repo</id>
                    <name>mortbay-repo</name>
                    <url>http://www.mortbay.org/maven2/snapshot</url>
                </pluginRepository>
            </pluginRepositories>

        </profile>
    </profiles>

    <dependencies>
        <dependency>
            <groupId>uk.ac.ebi.intact.app</groupId>
            <artifactId>app-commons</artifactId>
            <version>2.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>uk.ac.ebi.intact.app.search</groupId>
            <artifactId>search-engine</artifactId>
            <version>2.0-SNAPSHOT</version>
        </dependency>

        <!-- server -->
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
            <version>2.4</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>jsp-api</artifactId>
            <version>2.0</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>


</project>
