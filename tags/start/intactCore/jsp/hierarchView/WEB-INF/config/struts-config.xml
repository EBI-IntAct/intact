  <!-- ========== Form Bean Definitions =================================== -->
  <form-beans>

    <!-- visualization form bean -->
    <form-bean      name="visualizeForm"
                    type="uk.ac.ebi.intact.application.hierarchView.struts.VisualizeForm"/>

    <!-- highlightment form bean -->
    <form-bean      name="highlightmentForm"
                    type="uk.ac.ebi.intact.application.hierarchView.struts.HighlightmentForm"/>

  </form-beans>


  <!-- ========== Global Forward Definitions ============================== -->
  <global-forwards>

    <forward   name="quit"               path="/exit.jsp"/>

  </global-forwards>


  <!-- ========== Action Mapping Definitions ============================== -->
  <action-mappings>

  <!-- Action mapping for the hierarchView application -->

    <!-- Processes the main form which allow to define the interaction network you want to visualize -->
    <action   path="/visualize"
              type="uk.ac.ebi.intact.application.hierarchView.struts.VisualizeAction"
              name="visualizeForm"
              scope="request"
	      input="/view.jsp">
	
	<forward  name="success"  path="/view.jsp"/>
	<forward  name="error"    path="/view.jsp"/>
	
    </action>

    <!-- Processes the highlightment form -->
    <action   path="/highlightment"
              type="uk.ac.ebi.intact.application.hierarchView.struts.HighlightmentAction"
              name="highlightmentForm"
              scope="request"
              input="/view.jsp">

	<forward  name="success"  path="/view.jsp"/>

    </action>

    <!-- Processes the user's action allowing to select an object in an external application -->
    <action   path="/source"
              type="uk.ac.ebi.intact.application.hierarchView.struts.SourceAction"
              scope="request"
              input="/hierarchy.jsp">
	
	<forward  name="success"  path="/view.jsp"/>

    </action>

    <!-- Processes the centered view action -->
    <action   path="/centered"
              type="uk.ac.ebi.intact.application.hierarchView.struts.CenteredAction"
              scope="request"
              input="/view.jsp">
	
	<forward  name="success"  path="/view.jsp"/>
	<forward  name="error"    path="/view.jsp"/>

    </action>

  <!-- End - hierarchView application -->




