  <!-- ========== Form Bean Definitions =================================== -->
  <form-beans>

    <!-- search form bean -->
    <form-bean      name="searchForm"
                    type="uk.ac.ebi.intact.test.struts.SearchForm"/>

    <!-- create form bean: this can be defined when Sharmila's create JSPs are integrated -->
    <!--
    <form-bean      name="createForm"
                    type="uk.ac.ebi.intact.test.struts.create.CreateForm"/>
                    -->

    <!-- logon form bean -->
    <form-bean      name="logonForm"
                    type="uk.ac.ebi.intact.test.struts.LogonForm"/>

  </form-beans>


  <!-- ========== Global Forward Definitions ============================== -->
  <global-forwards>
    <forward   name="logoff"               path="/logoff.do"/>
    <forward   name="logon"                path="/logon.jsp"/>
    <forward   name="success"              path="/mainMenu.jsp"/>
    <forward   name="failure"              path="/error.jsp"/>
  </global-forwards>


  <!-- ========== Action Mapping Definitions ============================== -->
  <action-mappings>

    <!-- Process a user logoff -->
    <action    path="/logoff"
               type="uk.ac.ebi.intact.test.struts.LogoffAction">
      <forward name="success"              path="/index.jsp"/>
    </action>

    <!-- Process a user logon -->
    <action    path="/logon"
               type="uk.ac.ebi.intact.test.struts.LogonAction"
               name="logonForm"
              scope="request"
              input="/logon.jsp">
    </action>

  <!-- Search action -->
  <action     path="/search"
              type="uk.ac.ebi.intact.test.struts.SearchAction"
              name="searchForm"
              scope="request"
              input="/search.jsp">
    <forward  name="success"        path="/results.jsp"/>
    <forward  name="noMatch"        path="/noMatch.jsp"/>
    <forward  name="showDetail"        path="/results.jsp"/>
  </action>

