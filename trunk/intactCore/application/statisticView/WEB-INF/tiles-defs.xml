<?xml version="1.0" encoding="ISO-8859-1" ?>

 <!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 1.1//EN"
       "http://jakarta.apache.org/struts/dtds/tiles-config_1_1.dtd">

<!--
    Tiles definitions for the StatisticView application.
    Author: Sophie Huet (shuet@ebi.ac.uk)

-->


<tiles-definitions>

    <!-- =============== Menu Links ====================================== -->

    <!-- Menu links for the search page. -->
    <definition name="stat.menu.links" path="/layouts/menu.jsp">
        <put name="title" value="Links"/>
        <putList name="items">
            <item value="Refresh" link="../init.jsp"/>
        </putList>
    </definition>

    <!-- ============ Sidebars ============================================ -->

    <!-- Sidebar for the SrsSearchResults and SimilaritySearchResults pages -->
    <definition name="stat.sidebar.layout" path="/layouts/sidebar.jsp">
        <put name="menu" value="stat.menu.links"/>
    </definition>

    <!-- ============ Commons to all IntAct pplication ==================== -->

    <!-- The footer layout -->
    <definition name="intact.footer.layout" path="/pages/footer.jsp">
    </definition>

    <!-- ============ Definitions of StatisticView screens ================= -->

    <!-- The header layout. -->
    <definition name="header.layout" path="/layouts/headerLayout.jsp">
        <put name="header.title" value="Statistics"/>
    </definition>

    <!-- StatisticView page description -->
    <definition name="statisticView.layout" path="/layouts/intactLayout.jsp">
        <put name="title"     value="Statistics"/>
        <!-- just no sidebar - this must be defined -->
        <put name="header"    value="header.layout"/>
        <!-- just no content - this must be defined -->
        <put name="footer" value="intact.footer.layout"/>
    </definition>

    <!-- statView page content definition -->
    <definition name="statView.layout" extends="statisticView.layout">
        <put name="sidebar" value="stat.sidebar.layout"/>
        <put name="content" value="/pages/statView.jsp"/>
    </definition>


</tiles-definitions>
