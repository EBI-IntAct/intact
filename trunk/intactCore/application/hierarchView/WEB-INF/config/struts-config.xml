<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.0//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_0.dtd">

<!--  DECLARATION FOR STRUTS 1.1
<!DOCTYPE struts-config PUBLIC
 	"-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
	"http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
-->

<!--
This is the Struts configuration file for the example application,
using the proposed new syntax.

NOTE:  You would only flesh out the details in the "form-bean"
declarations if you had a generator tool that used them to create
the corresponding Java classes for you.  Otherwise, you would
need only the "form-bean" element itself, with the corresponding
"name" and "type" attributes.
-->


<struts-config>

    <!-- ========== Form Bean Definitions =================================== -->
    <form-beans>

        <!-- visualization form bean -->
        <form-bean name="visualizeForm"
                   type="uk.ac.ebi.intact.application.hierarchView.struts.view.VisualizeForm"/>

        <!-- highlightment form bean -->
        <form-bean name="highlightmentForm"
                   type="uk.ac.ebi.intact.application.hierarchView.struts.view.HighlightmentForm"/>

    </form-beans>



    <!-- ========== Global Forward Definitions ============================== -->
    <global-forwards>
        <forward name="quit" path="/exit.jsp"/>
    </global-forwards>



    <!-- ========== Action Mapping Definitions ============================== -->
    <action-mappings>

        <!-- Action mapping for the hierarchView application -->

        <!-- Processes the main form which allow to define the interaction network you want to visualize -->
        <action path="/visualize"
                type="uk.ac.ebi.intact.application.hierarchView.struts.controller.VisualizeAction"
                name="visualizeForm"
                scope="request"
                input="/view.jsp">

            <forward  name="success"  path="/view.jsp"/>
            <forward  name="error"    path="/view.jsp"/>

        </action>

        <!-- Processes the highlightment form -->
        <action path="/highlightment"
                type="uk.ac.ebi.intact.application.hierarchView.struts.controller.HighlightmentAction"
                name="highlightmentForm"
                scope="request"
                input="/view.jsp">

            <forward  name="success"  path="/view.jsp"/>

        </action>

        <!-- Processes the user's action allowing to select an object in an external application -->
        <action path="/source"
                type="uk.ac.ebi.intact.application.hierarchView.struts.controller.SourceAction"
                scope="request"
                input="/hierarchy.jsp">

            <forward  name="success"  path="/view.jsp"/>

        </action>

        <!-- Processes the centered view action -->
        <action path="/centered"
                type="uk.ac.ebi.intact.application.hierarchView.struts.controller.CenteredAction"
                scope="request"
                input="/view.jsp">

            <forward  name="success"  path="/view.jsp"/>
            <forward  name="error"    path="/view.jsp"/>

        </action>

    </action-mappings>

</struts-config>
