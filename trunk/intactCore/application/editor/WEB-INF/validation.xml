<!DOCTYPE form-validation PUBLIC
    "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.0//EN"
    "http://jakarta.apache.org/commons/dtds/validator_1_0.dtd">

<form-validation>
    <global>
        <!-- The pattern for a short label; any character(s) in the
             set [a-z0-9-:_], an optional space and then any character(s)
             from the previous set.
        -->
        <constant>
            <constant-name>label-pat</constant-name>
            <constant-value>^[a-z0-9\-:_]+ ?[a-z0-9\-:_]+$</constant-value>
        </constant>

        <!-- The pattern to filter out Select item in a drop down list. Note the
             blank in the allowed list. This pattern is repeated till the end (+$).
        -->
        <constant>
            <constant-name>menu-pat</constant-name>
            <constant-value>^[a-z0-9\-:_\. ]+$</constant-value>
            <!--            <constant-value>^[a-z0-9\-:_\.]+ ?[a-z0-9\-:_]+$</constant-value>-->
        </constant>
    </global>

    <formset>

        <!-- ==================== Login Form ========================== -->

        <form name="loginForm">
            <field property="username" depends="required">
                <arg0 key="loginForm.label.username"/>
            </field>

            <field property="password" depends="required">
                <arg0 key="loginForm.label.password"/>
            </field>
        </form>

        <!-- ==================== CV Form ========================= -->

        <form name="cvForm">
            <field property="shortLabel" depends="required, mask, maxlength">
                <msg name="mask" key="error.shortlabel.mask"/>
                <msg name="maxlength" key="error.shortlabel.maxlength"/>

                <arg0 key="label.shortlabel"/>
                <arg1 name="maxlength" key="${var:maxlength}" resource="false"/>

                <var>
                    <var-name>mask</var-name>
                    <var-value>${label-pat}</var-value>
                </var>

                <var>
                    <var-name>maxlength</var-name>
                    <var-value>20</var-value>
                </var>
            </field>
        </form>

        <!-- ==================== Experiment Form ========================= -->

        <form name="expForm">
            <field property="shortLabel" depends="required, mask, maxlength">
                <msg name="mask" key="error.shortlabel.mask"/>
                <msg name="maxlength" key="error.shortlabel.maxlength"/>

                <arg0 key="label.shortlabel"/>
                <arg1 name="maxlength" key="${var:maxlength}" resource="false"/>

                <var>
                    <var-name>mask</var-name>
                    <var-value>${label-pat}</var-value>
                </var>

                <var>
                    <var-name>maxlength</var-name>
                    <var-value>20</var-value>
                </var>
            </field>

            <!-- BioSource property -->
            <field property="organism" depends="mask">
                <msg name="mask" key="error.exp.biosrc"/>
                <var>
                    <var-name>mask</var-name>
                    <var-value>${menu-pat}</var-value>
                </var>
            </field>

            <!-- CvInteraction property -->
            <field property="inter" depends="mask">
                <msg name="mask" key="error.exp.inter"/>
                <var>
                    <var-name>mask</var-name>
                    <var-value>${menu-pat}</var-value>
                </var>
            </field>

            <!-- CvIdentity property -->
            <field property="ident" depends="mask">
                <msg name="mask" key="error.exp.ident"/>
                <var>
                    <var-name>mask</var-name>
                    <var-value>${menu-pat}</var-value>
                </var>
            </field>
        </form>

        <!-- ==================== Interaction Form ========================= -->

        <form name="intForm">
            <field property="shortLabel" depends="required, mask, maxlength">
                <msg name="mask" key="error.shortlabel.mask"/>
                <msg name="maxlength" key="error.shortlabel.maxlength"/>

                <arg0 key="label.shortlabel"/>
                <arg1 name="maxlength" key="${var:maxlength}" resource="false"/>

                <var>
                    <var-name>mask</var-name>
                    <var-value>${label-pat}</var-value>
                </var>

                <var>
                    <var-name>maxlength</var-name>
                    <var-value>20</var-value>
                </var>
            </field>

            <!-- Annotation topic property -->
            <!-- Can't be done as it is because we want this validation only for
                 pressing the add annotation button -->
<!--            <field property="newAnnotation.topic" depends="mask">-->
<!--                <msg name="mask" key="error.annotation.topic"/>-->
<!--                <var>-->
<!--                    <var-name>mask</var-name>-->
<!--                    <var-value>${menu-pat}</var-value>-->
<!--                </var>-->
<!--            </field>-->

            <!-- CvInteractionType property -->
            <field property="interactionType" depends="mask">
                <msg name="mask" key="error.int.cvtype"/>
                <var>
                    <var-name>mask</var-name>
                    <var-value>${menu-pat}</var-value>
                </var>
            </field>
        </form>

        <!-- ==================== BioSource Form ========================= -->

        <form name="bsForm">
            <field property="shortLabel" depends="required, mask, maxlength">
                <msg name="mask" key="error.shortlabel.mask"/>
                <msg name="maxlength" key="error.shortlabel.maxlength"/>

                <arg0 key="label.shortlabel"/>
                <arg1 name="maxlength" key="${var:maxlength}" resource="false"/>

                <var>
                    <var-name>mask</var-name>
                    <var-value>${label-pat}</var-value>
                </var>

                <var>
                    <var-name>maxlength</var-name>
                    <var-value>20</var-value>
                </var>
            </field>

            <!-- TaxId property -->
            <field property="taxId" depends="mask">
                <msg name="mask" key="error.taxid.mask"/>

                <var>
                    <var-name>mask</var-name>
                    <var-value>^[0-9\-]+$</var-value>
                </var>
            </field>
        </form>

        <!-- ==================== Feature Form ========================= -->

        <form name="featureForm">
            <field property="shortLabel" depends="required, mask, maxlength">
                <msg name="mask" key="error.shortlabel.mask"/>
                <msg name="maxlength" key="error.shortlabel.maxlength"/>

                <arg0 key="label.shortlabel"/>
                <arg1 name="maxlength" key="${var:maxlength}" resource="false"/>

                <var>
                    <var-name>mask</var-name>
                    <var-value>${label-pat}</var-value>
                </var>

                <var>
                    <var-name>maxlength</var-name>
                    <var-value>20</var-value>
                </var>
            </field>

            <!-- CvFeatureType property -->
            <field property="featureType" depends="mask">
                <msg name="mask" key="error.feature.cvtype"/>
                <var>
                    <var-name>mask</var-name>
                    <var-value>${menu-pat}</var-value>
                </var>
            </field>
        </form>

    </formset>
</form-validation>
