<!DOCTYPE form-validation PUBLIC
    "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.0//EN"
    "http://jakarta.apache.org/commons/dtds/validator_1_0.dtd">

<form-validation>
    <global>
        <constant>
            <!-- The characters allowed for a label -->
            <constant-name>label-allowed-char</constant-name>
            <constant-value>[a-z0-9\-:_]</constant-value>
        </constant>
    </global>
    <formset>

        <form name="loginForm">
            <field property="username" depends="required">
         	    <arg0 key="loginForm.label.username"/>
            </field>

            <field property="password" depends="required">
         	    <arg0 key="loginForm.label.password"/>
            </field>
        </form>

        <form name="cvInfoForm">
            <field property="shortLabel" depends="required, mask, maxlength">
                <msg name="mask" key="errors.shortlabel.mask"/>
         	    <msg name="maxlength" key="errors.shortlabel.maxlength"/>

                <arg0 key="cvinfo.label.shortlabel"/>
                <arg1 name="maxlength" key="${var:maxlength}" resource="false"/>

                <var>
                    <var-name>mask</var-name>
                    <var-value>^${label-allowed-char}+ ?${label-allowed-char}+$</var-value>
                </var>

                <var>
                    <var-name>maxlength</var-name>
                    <var-value>20</var-value>
                </var>
            </field>

        </form>

        <form name="bioSourceForm">
            <field property="taxId" depends="required, mask">
                <msg name="mask" key="errors.taxid.mask"/>
                <arg0 key="biosource.taxid.label"/>
                <var>
                    <var-name>mask</var-name>
                    <var-value>^\d+$</var-value>
                </var>
            </field>
        </form>
    </formset>
</form-validation>
