<?xml version="1.0" encoding="ISO-8859-1" ?>

 <!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 1.1//EN"
       "http://jakarta.apache.org/struts/dtds/tiles-config_1_1.dtd">

<!--
    Tiles definitions for cvedit
    Author: Sugath Mudali (smudali@ebi.ac.uk)
    Version: $Id$
 -->

<tiles-definitions>

    <!-- =============== Menu Links ====================================== -->

    <!-- Menu links for the search page. -->
    <definition name="search.menu.links" path="/layouts/menu.jsp">
        <put name="title" value="Links"/>
        <putList name="items">
            <item value="Logout" link="/do/cv/logout"/>
        </putList>
    </definition>

    <!-- Menu for the results page -->
    <definition name="result.menu.links" extends="search.menu.links">
        <putList name="items">
            <item value="New Search"  link="/do/cv/search/new"/>
            <item value="Logout" link="/do/cv/logout"/>
        </putList>
    </definition>

    <!-- =============== Sidebars ====================================== -->

    <!-- Sidebar for the login page -->
    <definition name="login.sidebar.layout" path="/layouts/sidebar.jsp">
        <put name="input-dialog" value="/pages/loginInput.jsp"/>
    </definition>

    <!-- Sidebar for the search page -->
    <definition name="search.sidebar.layout" path="/layouts/sidebar.jsp">
        <put name="input-dialog" value="/pages/userInput.jsp"/>
        <put name="menu" value="search.menu.links"/>
    </definition>

    <!-- Sidebar for the result page -->
    <definition name="result.sidebar.layout" extends="search.sidebar.layout">
        <put name="menu" value="result.menu.links"/>
    </definition>

    <!-- Sidebar for the edit page -->
    <definition name="edit.sidebar.layout" path="/layouts/sidebar.jsp">
        <put name="menu" value="result.menu.links"/>
    </definition>

    <!-- =============== Definitions related to pages ================= -->

    <!-- Login page description  -->
    <definition name="login.layout" path="/layouts/defaultLayout.jsp">
        <put name="title"  value="IntAct - Control Vocabulary Editor"/>
<!--        <put name="stylesheet" value="layouts/styles/cvedit.css"/>-->
        <put name="sidebar" value="login.sidebar.layout"/>
        <put name="header" value="/pages/common/header.jsp"/>
        <put name="footer" value="/pages/common/footer.jsp"/>
    </definition>

    <!-- Login failure page description  -->
    <definition name="login.error.layout" extends="login.layout">
        <put name="content" value="/pages/error.jsp"/>
    </definition>

    <!-- Search page description  -->
    <definition name="search.layout" extends="login.layout">
<!--        <put name="stylesheet" value="styles/cvedit.css"/>-->
        <put name="sidebar" value="search.sidebar.layout"/>
        <put name="header" value="/pages/common/header.jsp"/>
        <put name="footer" value="/pages/common/footer.jsp"/>
    </definition>

    <!-- Match page description. -->
    <definition name="match.layout" extends="search.layout">
        <put name="content" value="/pages/results.jsp"/>
        <put name="sidebar" value="result.sidebar.layout"/>
    </definition>

    <!-- Match failed page description. -->
    <definition name="no.match.layout" extends="match.layout">
        <put name="content" value="/pages/noMatch.jsp"/>
    </definition>

    <!-- Edit page description. -->
    <definition name="edit.layout" extends="match.layout">
        <put name="content" value="/pages/edit.jsp"/>
        <put name="sidebar" value="edit.sidebar.layout"/>
    </definition>

    <!-- General error layout -->
    <definition name="error.layout" extends="match.layout">
        <put name="content" value="/pages/error.jsp"/>
        <put name="sidebar" value="search.sidebar.layout"/>
    </definition>

</tiles-definitions>
