<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>uk.ac.ebi.intact.plugins</groupId>
        <artifactId>plugins-miscel</artifactId>
        <version>1.6.0-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>uk.ac.ebi.intact.plugins</groupId>
    <artifactId>ebeye-export-maven-plugin</artifactId>
    <packaging>maven-plugin</packaging>
    <version>1.6.0-SNAPSHOT</version>

    <name>ebeye-export-maven-plugin Maven Mojo</name>
    <description>EB-eye export plugin for IntAct</description>
    <url>http://www.ebi.ac.uk/~intact/devsite/maven-plugins/${artifactId}</url>

    <scm>
        <connection>scm:svn:https://intact.svn.sourceforge.net/svnroot/intact/repo/maven-plugins/ebeye-export-maven-plugin/trunk</connection>
        <developerConnection>scm:svn:https://intact.svn.sourceforge.net/svnroot/intact/repo/maven-plugins/ebeye-export-maven-plugin/trunk</developerConnection>
        <url>http://svn.sourceforge.net/viewcvs.cgi/intact/intact/repo/maven-plugins/ebeye-export-maven-plugin/trunk</url>
    </scm>

    <build>
        <plugins>
            <plugin>
                <groupId>uk.ac.ebi.intact.plugins</groupId>
                <artifactId>dbtest-maven-plugin</artifactId>
                <version>1.6.0-SNAPSHOT</version>

                <configuration>
                    <imports>
                        <xmlFilesets>
                            <xmlFileset>
                                <version>1</version>
                                <urls>
                                    <url>ftp://ftp.ebi.ac.uk/pub/databases/intact/current/psi1/pmid/2007/10757791.xml
                                    </url>
                                </urls>
                            </xmlFileset>
                        </xmlFilesets>
                    </imports>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>

        <dependency>
            <groupId>uk.ac.ebi.intact.templates</groupId>
            <artifactId>h2db-with-cv</artifactId>
            <type>zip</type>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>uk.ac.ebi.intact</groupId>
            <artifactId>intact-ebi-search-engine-export</artifactId>
            <version>1.3</version>
        </dependency>

    </dependencies>



</project>