<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>uk.ac.ebi.intact.maven</groupId>
        <artifactId>intact-master-webapp</artifactId>
        <version>2.4-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>

    <groupId>uk.ac.ebi.intact.app.search</groupId>
    <artifactId>search-app</artifactId>
    <packaging>war</packaging>
    <version>1.6.0-SNAPSHOT</version>

    <name>Search application</name>
    <description>Search web interface</description>
    <url>http://www.ebi.ac.uk/~intact/devsite/${artifactId}</url>

    <scm>
        <connection>scm:svn:https://intact.svn.sourceforge.net/svnroot/intact/repo/search/search-app/trunk</connection>
        <developerConnection>scm:svn:https://intact.svn.sourceforge.net/svnroot/intact/repo/search/search-app/trunk
        </developerConnection>
        <url>http://intact.svn.sourceforge.net/svnroot/intact/repo/search/search-app/trunk/</url>
    </scm>

    <properties>
        <site.remote.basedir>scp://quanea2.ebi.ac.uk/ebi/sp/pro6/intact/local/doc/devsite</site.remote.basedir>
    </properties>

    <profiles>
        <profile>
            <id>jettyConfig</id>
            <build>
                <finalName>search</finalName>
            </build>
        </profile>
        <profile>
            <id>imex</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>uk.ac.ebi.intact.datasets</groupId>
                        <artifactId>dbunit-dataset-maven-plugin</artifactId>
                        <configuration>
                            <noexport>true</noexport>
                            <providerName>PsiTestDatasetProvider</providerName>
                            <cvConfiguration>
                                <oboUrl>http://svn.sourceforge.net/viewvc/*checkout*/intact/repo/utils/data/controlledVocab/psi-mi25-4intact.obo?revision=8645</oboUrl>
                                <additionalUrl>http://intact.svn.sourceforge.net/viewvc/*checkout*/intact/repo/utils/data/controlledVocab/intact-unique.csv</additionalUrl>
                                <additionalAnnotationsUrl>
                                    http://intact.svn.sourceforge.net/viewvc/*checkout*/intact/repo/utils/data/controlledVocab/additional-annotations.csv
                                </additionalAnnotationsUrl>
                            </cvConfiguration>
                            <datasets>
                                <dataset>
                                    <id>INTACT_JUL_06</id>
                                    <containsAllCVs>true</containsAllCVs>
                                    <files>
                                        <file>src/psi25/intact_2006-07-19.xml</file>
                                    </files>
                                </dataset>
                            </datasets>
                        </configuration>
                        <executions>
                            <execution>
                                <phase>generate-sources</phase>
                                <goals>
                                    <goal>dataset</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <dependencies>
        <dependency>
            <groupId>uk.ac.ebi.intact</groupId>
            <artifactId>intact-core</artifactId>
            <version>1.6.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>uk.ac.ebi.intact.app.search</groupId>
            <artifactId>search-engine</artifactId>
            <version>1.6.0-SNAPSHOT</version>
        </dependency>

        <!-- third party -->
        <dependency>
            <groupId>com.h2database</groupId>
            <artifactId>h2</artifactId>
            <version>1.0.20070429</version>
        </dependency>

        <!-- dependency to draw the graph schemas in the advanced search -->
        <dependency>
            <groupId>com.sun</groupId>
            <artifactId>jimi</artifactId>
            <version>1.0</version>
        </dependency>
        <!--
        <dependency>
              <groupId>displaytag</groupId>
              <artifactId>displaytag</artifactId>
              <version>1.0-unknown</version>
          </dependency>
          -->
        <dependency>
            <groupId>taglibs</groupId>
            <artifactId>standard</artifactId>
            <version>1.1.2</version>
        </dependency>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>jstl</artifactId>
            <version>1.1.2</version>
        </dependency>

    </dependencies>

    <!-- EBI repositories -->
    <repositories>
        <repository>
            <id>ebi-repo</id>
            <name>The EBI internal repository</name>
            <url>http://www.ebi.ac.uk/~maven/m2repo</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>ebi-repo-snapshots</id>
            <name>The EBI internal repository</name>
            <url>http://www.ebi.ac.uk/~maven/m2repo_snapshots</url>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>

    <distributionManagement>
        <site>
            <id>intact-site</id>
            <name>Intact site</name>
            <url>${site.remote.basedir}/${artifactId}</url>
        </site>
    </distributionManagement>

</project>
