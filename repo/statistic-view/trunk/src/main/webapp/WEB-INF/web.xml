<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app
        PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

    <description>
        StatisticView is a Web application made to display:
        * a table with the main statistics stored in the local IntAct Database:
        - number of proteins
        - number of interactions
        - number of interactions with 2 interactors
        - number of interactions with more than 2 interactors
        - number of experiments
        - number of terms provided by the controlled vocabulary
        * 4 graphics to show the evolution of these amount of data in the database
    </description>

    <distributable/>

    <!-- Where the log file is stored -->
    <context-param>
        <param-name>logfile</param-name>
        <param-value>intact_log.txt</param-value>
    </context-param>

    <!-- =================================================================== -->

    <!-- Filter to open the session at the beginning of the request and close on end -->
    <filter>
        <filter-name>hibernateFilter</filter-name>
        <filter-class>uk.ac.ebi.intact.application.commons.util.HibernateSessionRequestFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>hibernateFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Listeners -->
    <listener>
        <listener-class>uk.ac.ebi.intact.application.statisticView.webapp.HibernateWebappListener</listener-class>
    </listener>


    <!-- =============================== Action Servlet Configuration ==================================== -->

    <servlet>

        <servlet-name>action</servlet-name>
        <servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
        <init-param>
            <!-- The name of the Struts property file, '.properties' is automatically added -->
            <param-name>application</param-name>
            <param-value>/config/Struts</param-value>
        </init-param>

        <init-param>
            <param-name>config</param-name>
            <param-value>/WEB-INF/struts-config.xml</param-value>
        </init-param>

        <init-param>
            <param-name>debug</param-name>
            <param-value>2</param-value>
        </init-param>

        <init-param>
            <param-name>detail</param-name>
            <param-value>2</param-value>
        </init-param>

        <init-param>
            <param-name>validate</param-name>
            <param-value>true</param-value>
        </init-param>

        <load-on-startup>1</load-on-startup>

    </servlet>

    <!-- =================================================================== -->


    <servlet>
        <servlet-name>ChartProvider</servlet-name>
        <servlet-class>uk.ac.ebi.intact.application.statisticView.webapp.ChartProviderServlet</servlet-class>
    </servlet>


    <!--  Servlet mapping  -->

    <servlet-mapping>
        <servlet-name>ChartProvider</servlet-name>
        <url-pattern>/servlet/ChartProvider</url-pattern>
    </servlet-mapping>


    <!-- =================================================================== -->

    <!-- Action Servlet Mapping with servlets adding by Sophie on 03/02 and one welcome file "index.jsp"-->
    <servlet-mapping>
        <servlet-name>action</servlet-name>
        <url-pattern>/do/*</url-pattern>
    </servlet-mapping>


    <session-config>
        <session-timeout>2</session-timeout>
    </session-config>

    <!-- =================================================================== -->

    <!-- The Welcome File List --><!-- it's the first page where an user is sent when he uses the URL !-->
    <welcome-file-list>
        <welcome-file>init.jsp</welcome-file>
    </welcome-file-list>

</web-app>
