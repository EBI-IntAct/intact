<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>uk.ac.ebi.intact.datasets</groupId>
        <artifactId>unitdatasets-master</artifactId>
        <version>1.6.0-beta-2-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>

    <artifactId>intact-dataset</artifactId>
    <packaging>jar</packaging>
    <version>1.6.0-beta-2-SNAPSHOT</version>

    <name>IntAct Unit Datasets :: IntAct Dataset</name>
    <description>Default IntAct Dataset</description>

    <build>
        <plugins>
            <plugin>
                <groupId>uk.ac.ebi.intact.datasets</groupId>
                <artifactId>dbunit-dataset-maven-plugin</artifactId>
                <configuration>
                    <providerName>PsiTestDatasetProvider</providerName>
                    <cvConfiguration>
                        <oboUrl>http://intact.svn.sourceforge.net/viewvc/*checkout*/intact/repo/utils/data/controlledVocab/psi-mi25-4intact.obo</oboUrl>
                        <additionalUrl>http://intact.svn.sourceforge.net/viewvc/*checkout*/intact/repo/utils/data/controlledVocab/intact-unique.csv</additionalUrl>
                        <additionalAnnotationsUrl>http://intact.svn.sourceforge.net/viewvc/*checkout*/intact/repo/utils/data/controlledVocab/additional-annotations.csv</additionalAnnotationsUrl>
                    </cvConfiguration>
                    <datasets>
                        <dataset>
                            <id>ALL_CVS</id>
                            <containsAllCVs>true</containsAllCVs>
                        </dataset>
                        <dataset>
                            <id>INTACT_JUL_06</id>
                            <files>
                                <file>${project.basedir}/src/psi25/intact_2006-07-19.xml</file>
                            </files>
                        </dataset>
                        <dataset>
                            <id>MINT_JUL_06</id>
                            <files>
                                <file>${project.basedir}/src/psi25/mint_2006-07-18.xml</file>
                            </files>
                        </dataset>
                        <dataset>
                            <id>DIP_NOV_06</id>
                            <files>
                               <file>${project.basedir}/src/psi25/dip_2006-11-01.xml</file>
                            </files>
                        </dataset>
                    </datasets>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-source-plugin</artifactId>
                <executions>
                    <execution>
                        <id>attach-source</id>
                        <phase>never</phase>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>


</project>
