        <developerConnection>scm:svn:https://svn.sourceforge.net/svnroot/intact/repo/maven/trunk/master-pom</developerConnection>
        <url>http://svn.sourceforge.net/viewcvs.cgi/intact/repo/maven/trunk/master-pom/</url>
    </scm>

    <properties>
        <institution>ebi</institution>
        <assembly.outputDirectory>target/assembly/out</assembly.outputDirectory>
