<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<!--
    Autogenerated file, using the plugin $artifactId, version $version
 -->

<hibernate-configuration>

#if( $mojo.SessionFactoryName )
    <session-factory name="$mojo.SessionFactoryName">
#else
    <session-factory>
#end

        <!-- Settings for a local HSQL (testing) database. -->
        <property name="dialect">$mojo.Dialect</property>
        <property name="connection.driver_class">$mojo.Driver</property>
        <property name="connection.url">$mojo.Url</property>
        <property name="connection.username">$mojo.User</property>
        <property name="connection.password">$mojo.Password</property>

        <property name ="connection.provider_class">$mojo.ConnectionProviderClass</property>

        <!-- Use the C3P0 connection pool. -->
        <property name="c3p0.min_size">3</property>
        <property name="c3p0.max_size">5</property>
        <property name="c3p0.timeout">1800</property>

        <!-- Disable second-level cache. -->
        <property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>
        <property name="cache.use_query_cache">false</property>
        <property name="cache.use_minimal_puts">false</property>
        <property name="max_fetch_depth">3</property>

        <!-- Print SQL to stdout. -->
        <property name="show_sql">$mojo.ShowSql</property>
        <property name="format_sql">$mojo.FormatSql</property>

        <!-- Drop and then re-create schema on SessionFactory build, for testing. -->
        <property name="hbm2ddl.auto">$mojo.Hbm2ddlAuto</property>

        <!-- Bind the getCurrentSession() method to the thread. -->
        <property name="current_session_context_class">thread</property>

#if($luceneIndexDir)
        <!-- Lucene index dir -->
        <property name="lucene.index_dir">$luceneIndexDir</property>
#end
#if($luceneAnalyzer)
        <!-- Lucene analyzer -->
        <property name="lucene.analyzer">$luceneAnalyzer</property>
#end
#foreach( $event in $mojo.hibernateEvents )
        <event type="$event.Type">
            <listener class="$event.Class"/>
         </event>
#end

    </session-factory>

</hibernate-configuration>