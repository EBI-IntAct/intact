<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>uk.ac.ebi.intact.maven</groupId>
        <artifactId>intact-master</artifactId>
        <version>1.0.5</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>uk.ac.ebi.intact</groupId>
    <artifactId>intact-test</artifactId>
    <packaging>jar</packaging>
    <version>1.0-SNAPSHOT</version>
    <name>IntAct Test Suite</name>
    <description>Test Suite</description>

    <scm>
        <connection>scm:svn:https://svn.sourceforge.net/svnroot/intact/repo/intact-test/trunk</connection>
        <developerConnection>scm:svn:https://svn.sourceforge.net/svnroot/intact/repo/intact-test/trunk</developerConnection>
        <url>http://svn.sourceforge.net/viewcvs.cgi/intact/repo/intact-test/trunk/</url>
    </scm>

    <properties>
        <showSql>false</showSql>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>uk.ac.ebi.intact.hibernate</groupId>
                <artifactId>maven-hibernateconfig-plugin</artifactId>
                <version>1.1.0</version>
                <configuration>
                    <dialect>org.hibernate.dialect.H2Dialect</dialect>
                    <driver>org.h2.Driver</driver>
                    <url>jdbc:h2:target/intact-testdb</url>
                    <user>sa</user>
                    <password></password>
                    <hbm2ddlAuto>create</hbm2ddlAuto>
                    <scope>test</scope>
                    <showSql>${showSql}</showSql>
                    <luceneIndexDir>${project.basedir}/target/lucene-index</luceneIndexDir>
                    <hibernateEvents>
                        <hibernateEvent>
                            <type>pre-insert</type>
                            <className>uk.ac.ebi.intact.model.IntactObjectEventListener</className>
                        </hibernateEvent>
                        <hibernateEvent>
                            <type>pre-update</type>
                            <className>uk.ac.ebi.intact.model.IntactObjectEventListener</className>
                        </hibernateEvent>
                    </hibernateEvents>
                </configuration>
                <executions>
                    <execution>
                        <phase>compile</phase>
                        <goals>
                            <goal>generate-config</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <forkMode>once</forkMode>
                    <argLine>-Dinstitution=ebi</argLine>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>uk.ac.ebi.intact</groupId>
            <artifactId>intact-core</artifactId>
            <version>1.4-SNAPSHOT</version>
        </dependency>

        <dependency>
            <groupId>org.h2</groupId>
            <artifactId>h2</artifactId>
            <version>2006-07-14-beta</version>
        </dependency>

        <dependency>
            <groupId>org.hibernate</groupId>
            <artifactId>hibernate-annotations</artifactId>
            <version>3.2.0.cr2-SNAPSHOT</version>
        </dependency>
    </dependencies>

     <!-- EBI repositories -->
    <repositories>
       <repository>
            <id>ebi-repo</id>
            <name>The EBI internal repository</name>
            <url>http://www.ebi.ac.uk/~maven/m2repo</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>

    <distributionManagement>
        <site>
            <id>intact-site</id>
            <name>Intact site</name>
            <url>${site.remote.basedir}/${artifactId}</url>
        </site>
    </distributionManagement>

</project>
