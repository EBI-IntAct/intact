<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>uk.ac.ebi.intact.plugins</groupId>
        <artifactId>plugins-miscel</artifactId>
        <version>1.9.0</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>

    <groupId>uk.ac.ebi.intact.plugins</groupId>
    <artifactId>uniprotexport-maven-plugin</artifactId>
    <packaging>maven-plugin</packaging>
    <version>1.9.0.1</version>

    <name>Plugin - Export lines for uniprot</name>
    <description>Generates the Export lines for uniprot</description>
    <url>http://www.ebi.ac.uk/~intact/devsite/maven-plugins/${artifactId}</url>

    <scm>
        <connection>scm:svn:https://intact.googlecode.com/svn/repo/plugins-miscel/branches/uniprotexport-maven-plugin-1.9.0.1</connection>
        <developerConnection>scm:svn:https://intact.googlecode.com/svn/repo/plugins-miscel/branches/uniprotexport-maven-plugin-1.9.0.1</developerConnection>
        <url>http://code.google.com/p/intact/source/browse/repo/plugins-miscel/branches/uniprotexport-maven-plugin-1.9.0.1</url>
    </scm>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.3</version>
                <configuration>
                    <!-- need more memory than the default for our unit tests -->
                    <argLine>-Xmx256m</argLine>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>uk.ac.ebi.intact.dataexchange.uniprotexport</groupId>
            <artifactId>intact-uniprot-export</artifactId>
            <version>2.0.2.1</version>
        </dependency>
        <dependency>
            <groupId>uk.ac.ebi.intact.dataexchange.psimi</groupId>
            <artifactId>intact-psixml-exchange</artifactId>
            <version>2.0.2</version>
            <exclusions>
                <exclusion>
                    <groupId>uk.ac.ebi.intact.bridges</groupId>
                    <artifactId>intact-citexplore</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>commons-collections</groupId>
            <artifactId>commons-collections</artifactId>
            <version>3.2</version>
        </dependency>
        <dependency>
            <groupId>uk.ac.ebi.intact.dataexchange.psimi</groupId>
            <artifactId>intact-psimitab</artifactId>
            <version>2.0.2</version>
        </dependency>
    </dependencies>

    <!-- EBI repositories -->
    <repositories>
        <repository>
            <id>ebi-repo</id>

            <name>The EBI internal repository</name>
            <url>http://www.ebi.ac.uk/~maven/m2repo</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>ebi-repo-snapshots</id>
            <name>The EBI internal repository</name>
            <url>http://www.ebi.ac.uk/~maven/m2repo_snapshots</url>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>    

</project>
