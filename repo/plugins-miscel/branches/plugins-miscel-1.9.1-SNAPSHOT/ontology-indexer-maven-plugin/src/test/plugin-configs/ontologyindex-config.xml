<project>
    <build>
        <plugins>
            <plugin>
                <artifactId>ontology-indexer-maven-plugin</artifactId>
                <configuration>
                    <indexDirectory>target/ontologyindex-test</indexDirectory>
                    <createIndex>true</createIndex>
                    <ontologyMap>
                        <!--go>http://www.geneontology.org/ontology/gene_ontology_edit.obo</go-->
                        <!--use go slim for testing -->
                        <go>http://www.geneontology.org/GO_slims/goslim_generic.obo</go>
                        <chebi>http://obo.cvs.sourceforge.net/*checkout*/obo/obo/ontology/chemical/chebi.obo</chebi>
                        <interpro>http://www.ebi.ac.uk/~intact/external/InterProHierarchyOBO.obo</interpro>
                        <psi-mi>http://psidev.sourceforge.net/mi/rel25/data/psi-mi25.obo</psi-mi>
                    </ontologyMap>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>