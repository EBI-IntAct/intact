<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>uk.ac.ebi.intact.plugins</groupId>
        <artifactId>plugins-miscel</artifactId>
        <version>1.9.1-SNAPSHOT</version>
    </parent>

    <groupId>uk.ac.ebi.intact.plugins</groupId>
    <artifactId>psimitab-maven-plugin</artifactId>
    <packaging>maven-plugin</packaging>
    <version>1.9.1-SNAPSHOT</version>

    <name>psimitab-maven-plugin Maven Mojo</name>
    <url>http://www.ebi.ac.uk/~intact/devsite/maven-plugins/${artifactId}</url>

    <scm>
        <connection>scm:svn:https://intact.googlecode.com/svn/repo/plugins-miscel/trunk/psimitab-maven-plugin</connection>
        <developerConnection>scm:svn:https://intact.googlecode.com/svn/repo/plugins-miscel/trunk/psimitab-maven-plugin</developerConnection>
        <url>http://intact.svn.sourceforge.net/svnroot/intact/repo/plugins-miscel/trunk/psimitab-maven-plugin</url>
    </scm>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.3</version>
                <configuration>
                    <!-- need more memory than the default for our unit tests -->
                    <argLine>-Xmx256m</argLine>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>mitab-db-export</id>

            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <phase>install</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <executable>java</executable>
                            <arguments>
                                <argument>-Xmx1024m</argument>
                                <argument>-classpath</argument>
                                <!-- automatically creates the classpath using all project dependencies,
                                     also adding the project build directory -->
                                <classpath/>
                                <argument>uk.ac.ebi.intact.plugins.DatabaseMitabExporter</argument>

                                <!-- Output MITAB file -->
                                <argument>intact.txt</argument>

                                <!-- Ontology mapping-->
                                <argument>go</argument>
                                <argument>http://www.geneontology.org/ontology/gene_ontology_edit.obo</argument>

                                <argument>interpro</argument>
                                <argument>http://www.ebi.ac.uk/~intact/external/InterProHierarchyOBO.obo</argument>

                                <argument>psi-mi</argument>
                                <argument>http://psidev.sourceforge.net/mi/rel25/data/psi-mi25.obo</argument>
                            </arguments>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
            <dependencies>
                <dependency>
                    <groupId>com.oracle</groupId>
                    <artifactId>oracle-thin</artifactId>
                    <version>10.2.0.4</version>
                </dependency>
            </dependencies>
        </profile>
    </profiles>

    <dependencies>

        <!-- IntAct deps -->
        <dependency>
            <groupId>uk.ac.ebi.intact.core</groupId>
            <artifactId>intact-core</artifactId>
            <version>2.4.0</version>
            <exclusions>
               <exclusion>
                  <groupId>org.apache.commons</groupId>
                  <artifactId>commons-io</artifactId>
               </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>uk.ac.ebi.intact.dataexchange.psimi</groupId>
            <artifactId>intact-psimitab</artifactId>
            <version>2.1.3</version>
            <exclusions>
               <exclusion>
                  <groupId>org.apache.commons</groupId>
                  <artifactId>commons-io</artifactId>
               </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>uk.ac.ebi.intact.dataexchange.psimi</groupId>
            <artifactId>intact-psimitab-converters</artifactId>
            <version>2.1.3</version>
            <exclusions>
                 <exclusion>
                      <groupId>org.apache.commons</groupId>
                      <artifactId>commons-io</artifactId>
                 </exclusion>
            </exclusions>
        </dependency>

        <!-- Maven deps -->
        <dependency>
            <groupId>org.apache.maven</groupId>
            <artifactId>maven-plugin-api</artifactId>
            <version>2.0.9</version>
        </dependency>
        <dependency>
            <groupId>org.apache.maven</groupId>
            <artifactId>maven-project</artifactId>
            <version>2.0.9</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.maven</groupId>
            <artifactId>maven-artifact</artifactId>
            <version>2.0.9</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.maven.shared</groupId>
            <artifactId>maven-plugin-testing-harness</artifactId>
            <version>1.1</version>
            <scope>test</scope>
        </dependency>

        <!-- Solr related deps -->

        <dependency>
            <groupId>uk.ac.ebi.intact.dataexchange.psimi</groupId>
            <artifactId>intact-solr</artifactId>
            <version>2.1.3</version>
        </dependency>

        <!-- misc -->

        <dependency>
            <groupId>commons-collections</groupId>
            <artifactId>commons-collections</artifactId>
            <version>3.2</version>
        </dependency>

        <!-- test -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.3.1</version>
            <scope>test</scope>
        </dependency>

        <!-- Jetty deps -->
        <dependency>
            <groupId>org.mortbay.jetty</groupId>
            <artifactId>jetty</artifactId>
            <version>6.1.16</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.mortbay.jetty</groupId>
            <artifactId>jetty-util</artifactId>
            <version>6.1.16</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.mortbay.jetty</groupId>
            <artifactId>jsp-2.1</artifactId>
            <version>6.1.11</version>
            <optional>true</optional>
            <scope>test</scope>
        </dependency>

    </dependencies>

    <distributionManagement>
        <site>
            <id>intact-site</id>
            <name>Intact site</name>
            <url>${site.remote.basedir}/maven-plugins/${artifactId}</url>
        </site>
    </distributionManagement>

    <repositories>
        <repository>
            <id>intact.nexus</id>
            <name>IntAct Nexus</name>
            <url>http://www.ebi.ac.uk/intact/maven/nexus/content/groups/public</url>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>intact.nexus</id>
            <name>IntAct Nexus</name>
            <url>http://www.ebi.ac.uk/intact/maven/nexus/content/groups/public</url>
        </pluginRepository>
    </pluginRepositories>

</project>
