<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd">

    <context:component-scan base-package="uk.ac.ebi.intact.faces"/>

    <bean name="imexPersistence" class="uk.ac.ebi.intact.dataexchange.imex.repository.ImexPersistence"
            p:entityManagerFactory-ref="entityManagerFactory"/>

    <!-- DAOs and Services -->
    <!-- Provider -->
    <bean class="uk.ac.ebi.intact.dataexchange.imex.repository.dao.impl.JpaProviderDao" id="providerDao"
            p:imexPersistence-ref="imexPersistence"/>
    <bean class="uk.ac.ebi.intact.dataexchange.imex.repository.dao.impl.JpaProviderService" id="providerService"
          p:providerDao-ref="providerDao"/>

    <!-- RepoEntrySet -->
    <bean class="uk.ac.ebi.intact.dataexchange.imex.repository.dao.impl.JpaRepoEntrySetDao" id="repoEntrySetDao"
            p:imexPersistence-ref="imexPersistence"/>
    <bean class="uk.ac.ebi.intact.dataexchange.imex.repository.dao.impl.JpaRepoEntrySetService" id="repoEntrySetService"
          p:entrySetDao-ref="repoEntrySetDao"/>

    <!-- RepoEntry -->
    <bean class="uk.ac.ebi.intact.dataexchange.imex.repository.dao.impl.JpaRepoEntryDao" id="repoEntryDao"
            p:imexPersistence-ref="imexPersistence"/>
    <bean class="uk.ac.ebi.intact.dataexchange.imex.repository.dao.impl.JpaRepoEntryService" id="repoEntryService"
          p:entryDao-ref="repoEntryDao"/>

    <!-- JPA annotations bean post processor -->
    <bean class="org.springframework.orm.jpa.support.PersistenceAnnotationBeanPostProcessor"/>
    <bean class="org.springframework.dao.annotation.PersistenceExceptionTranslationPostProcessor"/>

    <bean id="transactionManager" class="org.springframework.orm.jpa.JpaTransactionManager"
          p:entityManagerFactory-ref="entityManagerFactory"
            />

    <bean class="org.springframework.dao.annotation.PersistenceExceptionTranslationPostProcessor"/>
    <bean class="org.springframework.orm.jpa.support.PersistenceAnnotationBeanPostProcessor"/>

    <bean class="org.springframework.transaction.aspectj.AnnotationTransactionAspect">
        <property name="transactionManager" ref="transactionManager"/>
    </bean>

    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource">
       <property name="driverClassName" value="org.h2.Driver"/>
       <!--<property name="url" value="jdbc:h2:/tmp/imex-repo"/>-->
       <property name="username" value="sa"/>
       <property name="password" value=""/>
    </bean>

    <bean class="uk.ac.ebi.intact.core.spring.URLDecoderResourceLoader" id="resourceLoader"/>

    <bean id="persistenceUnitManager" class="org.springframework.orm.jpa.persistenceunit.DefaultPersistenceUnitManager">
        <property name="persistenceXmlLocations">
            <list>
                <!--<value>org/springframework/orm/jpa/domain/persistence-multi.xml</value>-->
                <!--<value>classpath:/my/package/**/custom-imex-repo-persistence.xml</value>-->
                <value>classpath*:META-INF/imex-repo-persistence.xml</value>
            </list>
        </property>

        <property name="resourceLoader" ref="resourceLoader"/>

        <!--<property>-->
            <!--<map>-->
                <!--<entry key="localDataSource" value-ref="dataSource"/>-->
                <!--<entry key="remoteDataSource" value-ref="remote-db"/>-->
            <!--</map>-->
        <!--</property>-->
         <!--if no datasource is specified, use this one -->
        <property name="defaultDataSource" ref="dataSource"/>

    </bean>

    <!--<bean class="org.springframework.beans.factory.aspectj.AnnotationBeanConfigurerAspect" />-->

    <bean id="entityManagerFactory" class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
        <property name="persistenceUnitManager" ref="persistenceUnitManager"/>
    </bean>

</beans>