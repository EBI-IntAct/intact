<?xml version="1.0"?>
<project>
    <parent>
        <groupId>uk.ac.ebi.intact.dataexchange.psimi</groupId>
        <artifactId>intact-psixml</artifactId>
        <version>2.0.0-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>

    <artifactId>psixml-source-generator-maven-plugin</artifactId>
    <packaging>maven-plugin</packaging>

    <name>IntAct Data Exchange :: PSI MI :: XML :: Maven Plugin :: Source Generator</name>
    <version>2.0.0-SNAPSHOT</version>
    <description>Plugin for IntAct</description>
    <url>http://www.ebi.ac.uk/~intact/devsite/maven-plugins/psixml-source-generator-maven-plugin</url>
    <scm>
        <connection>
            scm:svn:https://intact.svn.sourceforge.net/svnroot/intact/repo/intact-psixml/psixml-source-generator-maven-plugin/trunk
        </connection>
        <developerConnection>
            scm:svn:https://intact.svn.sourceforge.net/svnroot/intact/repo/intact-psixml/psixml-source-generator-maven-plugin/trunk
        </developerConnection>
        <url>
            http://svn.sourceforge.net/viewcvs.cgi/intact/repo/intact-psixml/psixml-source-generator-maven-plugin/trunk/
        </url>
    </scm>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <childDelegation>true</childDelegation>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>uk.ac.ebi.intact.plugins</groupId>
            <artifactId>intact-plugin</artifactId>
            <version>1.1.3</version>
        </dependency>
        <dependency>
            <groupId>uk.ac.ebi.intact.dataexchange.psimi</groupId>
            <artifactId>intact-psixml-processor</artifactId>
        </dependency>

        <dependency>
            <groupId>org.apache.maven</groupId>
            <artifactId>maven-plugin-api</artifactId>
            <version>2.0</version>
        </dependency>
        <dependency>
            <groupId>org.apache.maven</groupId>
            <artifactId>maven-project</artifactId>
            <version>2.0.4</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.maven</groupId>
            <artifactId>maven-artifact</artifactId>
            <version>2.0.4</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.maven.shared</groupId>
            <artifactId>maven-plugin-testing-harness</artifactId>
            <version>1.0-beta-1</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.3</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <reporting>
        <plugins>
            <plugin>
                <artifactId>maven-plugin-plugin</artifactId>
                <version>2.1</version>
            </plugin>
        </plugins>
    </reporting>

    <distributionManagement>
        <site>
            <id>intact-site</id>
            <name>Intact site</name>
            <url>${site.remote.basedir}/maven-plugins/psixml-source-generator-maven-plugin</url>
        </site>
    </distributionManagement>
</project>
